generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String[]
  imageUrl    String
  githubUrl   String
  liveUrl     String?
  category    String
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Series {
  id          String   @id @default(cuid())
  name        String   // "Open Source"
  description String?  // Optional series description
  coverImage  String   // "/open-source-series-cover.png"
  createdAt   DateTime @default(now())
  posts       Blog[]
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  content     String
  tags        String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  readTime    String
  imageUrl    String
  excerpt     String
  seriesId    String?
  seriesOrder Int?
  series      Series?  @relation(fields: [seriesId], references: [id])
}

model MediaItem {
  id           String   @id @default(cuid())
  type         String   // "book", "movie", "game"
  title        String
  creator      String
  rating       Int  
  imageUrl     String
  review       String
  dateConsumed DateTime
  isFavorite   Boolean
  link         String
  year         Int
} 

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}